COMPOSE_KOMODO_IMAGE_TAG={{ docker_komodo_core_version }}
COMPOSE_MONGO_IMAGE_TAG={{ docker_komodo_mongo_version }}
COMPOSE_KOMODO_BACKUPS_PATH=/etc/komodo/backups

## DB credentials
KOMODO_DB_USERNAME=admin
KOMODO_DB_PASSWORD={{ komodo_db_password }}

## Configure a secure passkey to authenticate between Core / Periphery.
KOMODO_PASSKEY={{ komodo_core_passkey }}

## Set your time zone for schedules
## https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ={{ TZ }}

